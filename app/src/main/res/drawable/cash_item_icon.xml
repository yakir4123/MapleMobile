<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <size
                android:width="200dp"
                android:height="200dp" />
            <solid android:color="@android:color/transparent" />
            <stroke android:color="#F8FDC045" android:width="20dp"/>
        </shape>
    </item>

    <item
        android:left="20dp"
        android:top="20dp"
        android:right="20dp"
        android:bottom="20dp">

        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:startColor="#E6B22E"
                android:endColor="#FA8D2E"
                android:angle="90"
                />

        </shape>
    </item>
</layer-list>