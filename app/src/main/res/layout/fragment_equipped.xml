<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.bapplications.maplemobile.utils.BindingUtils"/>
        <import type="com.bapplications.maplemobile.gameplay.player.inventory.EquipSlot.Id"/>
        <variable
            name="viewModel"
            type="com.bapplications.maplemobile.ui.view_models.EquippedViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/window_background">

        <TextView
            android:id="@+id/equipped_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/headline_window_background"
            android:paddingStart="70dp"
            android:paddingEnd="70dp"
            android:paddingBottom="3dp"
            android:text="@string/popup_equipped_title"
            android:textColor="@color/tc_window"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/sub_window_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/equipped_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:background="@drawable/sub_window_background"
            />

        <ImageView
            android:id="@+id/character_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/sub_window_background"
            app:layout_constraintBottom_toBottomOf="@id/sub_window_background"
            app:layout_constraintStart_toStartOf="@id/equipped_title"
            app:layout_constraintEnd_toEndOf="@id/equipped_title"
            android:src="@drawable/character"
            app:tint="@color/sub_window_color_main"
            />

        <ImageView
            android:id="@+id/helmet_slot"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:padding="3dp"
            android:background="@drawable/equipped_item_slot"
            app:itemTypeStat="@{BindingUtils.ItemTypeStat.ICON}"
            app:itemId="@{viewModel.getEquipBySlot(Id.HAT).item.itemId}"
            app:itemDataDefault="@{@drawable/helmet_slot}"
            tools:src="@drawable/helmet_slot"
            app:layout_constraintEnd_toEndOf="@id/character_iv"
            app:layout_constraintStart_toStartOf="@id/character_iv"
            app:layout_constraintTop_toTopOf="@id/character_iv"
            app:layout_constraintBottom_toBottomOf="@id/character_iv"
            app:layout_constraintVertical_bias="0.15"
            app:layout_constraintHorizontal_bias="0.2"
            />

        <ImageView
            android:id="@+id/glasses_slot"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:padding="3dp"
            android:background="@drawable/equipped_item_slot"
            app:itemTypeStat="@{BindingUtils.ItemTypeStat.ICON}"
            app:itemId="@{viewModel.getEquipBySlot(Id.EYEACC).item.itemId}"
            app:itemDataDefault="@{@drawable/glasses_slot}"
            tools:src="@drawable/glasses_slot"
            app:layout_constraintEnd_toEndOf="@id/character_iv"
            app:layout_constraintStart_toStartOf="@id/character_iv"
            app:layout_constraintTop_toTopOf="@id/character_iv"
            app:layout_constraintBottom_toBottomOf="@id/character_iv"
            app:layout_constraintVertical_bias="0.39"
            app:layout_constraintHorizontal_bias="0.34"
            />

        <ImageView
            android:id="@+id/earrings_slot"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:padding="3dp"
            android:background="@drawable/equipped_item_slot"
            app:itemTypeStat="@{BindingUtils.ItemTypeStat.ICON}"
            app:itemId="@{viewModel.getEquipBySlot(Id.EARRINGS).item.itemId}"
            app:itemDataDefault="@{@drawable/earring_slot}"
            tools:src="@drawable/earring_slot"
            app:layout_constraintEnd_toEndOf="@id/character_iv"
            app:layout_constraintStart_toStartOf="@id/character_iv"
            app:layout_constraintTop_toTopOf="@id/character_iv"
            app:layout_constraintBottom_toBottomOf="@id/character_iv"
            app:layout_constraintVertical_bias="0.45"
            app:layout_constraintHorizontal_bias="0.95"
            />

        <ImageView
            android:id="@+id/armor_slot"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:background="@drawable/equipped_item_slot"
            android:padding="3dp"
            app:itemTypeStat="@{BindingUtils.ItemTypeStat.ICON}"
            app:itemId="@{viewModel.getEquipBySlot(Id.TOP).item.itemId}"
            app:itemDataDefault="@{@drawable/armor_slot}"
            tools:src="@drawable/armor_slot"
            app:layout_constraintEnd_toEndOf="@id/character_iv"
            app:layout_constraintStart_toStartOf="@id/character_iv"
            app:layout_constraintTop_toTopOf="@id/character_iv"
            app:layout_constraintBottom_toBottomOf="@id/character_iv"
            app:layout_constraintVertical_bias="0.65"
            app:layout_constraintHorizontal_bias="0.46"
            />

        <ImageView
            android:id="@+id/pants_slot"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:background="@drawable/equipped_item_slot"
            android:padding="3dp"
            app:itemTypeStat="@{BindingUtils.ItemTypeStat.ICON}"
            app:itemId="@{viewModel.getEquipBySlot(Id.BOTTOM).item.itemId}"
            app:itemDataDefault="@{@drawable/pants_slot}"
            tools:src="@drawable/pants_slot"
            app:layout_constraintEnd_toEndOf="@id/character_iv"
            app:layout_constraintStart_toStartOf="@id/character_iv"
            app:layout_constraintTop_toTopOf="@id/character_iv"
            app:layout_constraintBottom_toBottomOf="@id/character_iv"
            app:layout_constraintVertical_bias="0.87"
            app:layout_constraintHorizontal_bias="0.46"
            />

        <ImageView
            android:id="@+id/gloves_slot"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:background="@drawable/equipped_item_slot"
            android:padding="3dp"
            app:itemTypeStat="@{BindingUtils.ItemTypeStat.ICON}"
            app:itemId="@{viewModel.getEquipBySlot(Id.GLOVES).item.itemId}"
            app:itemDataDefault="@{@drawable/gloves_slots}"
            tools:src="@drawable/gloves_slots"
            app:layout_constraintEnd_toEndOf="@id/character_iv"
            app:layout_constraintStart_toStartOf="@id/character_iv"
            app:layout_constraintTop_toTopOf="@id/character_iv"
            app:layout_constraintBottom_toBottomOf="@id/character_iv"
            app:layout_constraintVertical_bias="0.85"
            app:layout_constraintHorizontal_bias="0"
            />

        <ImageView
            android:id="@+id/shoes_slot"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:padding="3dp"
            android:background="@drawable/equipped_item_slot"
            app:itemTypeStat="@{BindingUtils.ItemTypeStat.ICON}"
            app:itemId="@{viewModel.getEquipBySlot(Id.SHOES).item.itemId}"
            app:itemDataDefault="@{@drawable/boot_slots}"
            tools:src="@drawable/boot_slots"
            app:layout_constraintEnd_toEndOf="@id/character_iv"
            app:layout_constraintStart_toStartOf="@id/character_iv"
            app:layout_constraintTop_toTopOf="@id/character_iv"
            app:layout_constraintBottom_toBottomOf="@id/character_iv"
            app:layout_constraintVertical_bias="0.97"
            app:layout_constraintHorizontal_bias="0.79"
            />

        <ImageView
            android:id="@+id/weapon_slot"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:padding="3dp"
            android:background="@drawable/equipped_item_slot"
            app:itemTypeStat="@{BindingUtils.ItemTypeStat.ICON}"
            app:itemId="@{viewModel.getEquipBySlot(Id.WEAPON).item.itemId}"
            app:itemDataDefault="@{@drawable/weapon_slot}"
            tools:src="@drawable/weapon_slot"
            app:layout_constraintEnd_toEndOf="@id/character_iv"
            app:layout_constraintStart_toStartOf="@id/character_iv"
            app:layout_constraintTop_toTopOf="@id/character_iv"
            app:layout_constraintBottom_toBottomOf="@id/character_iv"
            app:layout_constraintVertical_bias="0.8"
            app:layout_constraintHorizontal_bias="1"
            />

        <ImageView
            android:id="@+id/cape_slot"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:background="@drawable/equipped_item_slot"
            android:padding="3dp"
            app:itemTypeStat="@{BindingUtils.ItemTypeStat.ICON}"
            app:itemId="@{viewModel.getEquipBySlot(Id.CAPE).item.itemId}"
            app:itemDataDefault="@{@drawable/cape_slot}"
            tools:src="@drawable/cape_slot"
            app:layout_constraintEnd_toEndOf="@id/character_iv"
            app:layout_constraintStart_toStartOf="@id/character_iv"
            app:layout_constraintTop_toTopOf="@id/character_iv"
            app:layout_constraintBottom_toBottomOf="@id/character_iv"
            app:layout_constraintVertical_bias="0.6"
            app:layout_constraintHorizontal_bias="1"
            />

        <ImageView
            android:id="@+id/shield_slot"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:padding="3dp"
            android:background="@drawable/equipped_item_slot"
            app:itemTypeStat="@{BindingUtils.ItemTypeStat.ICON}"
            app:itemId="@{viewModel.getEquipBySlot(Id.SHIELD).item.itemId}"
            app:itemDataDefault="@{@drawable/shield_button}"
            tools:src="@drawable/shield_button"
            app:layout_constraintEnd_toEndOf="@id/character_iv"
            app:layout_constraintStart_toStartOf="@id/character_iv"
            app:layout_constraintTop_toTopOf="@id/character_iv"
            app:layout_constraintBottom_toBottomOf="@id/character_iv"
            app:layout_constraintVertical_bias="0.63"
            app:layout_constraintHorizontal_bias="0"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>